<%= simple_form_for(@conversation) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.hidden_field :tutorial_id, value: @conversation.tutorial_id %>
    <%= f.association :team, label_method: :name, value_method: :id, include_blank: false, as: :radio_buttons %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
