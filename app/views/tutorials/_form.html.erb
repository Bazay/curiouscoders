<%= simple_form_for(@tutorial) do |f| %>


    <%= f.input :title, :label => "Title" %>
    <%= f.input :about, :label => "About" %>
    <%= f.input :url, :label => "Link" %>
    <%= f.input :hours, :label => "How many hours does it take to complete?" %>
    <%= f.input :paid, :as => :boolean, :label => "Does the content owner charge users for this resource?" %>
  	<%= f.label :tags %>
	<%= f.text_field :tag_list %>
	<br>
    
    <%= f.button :submit, :class => 'btn btn-success' %>
 
<% end %>
