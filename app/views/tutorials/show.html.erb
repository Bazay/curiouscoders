<%= render :partial => @tutorial %>

<div class="content_box">
<h3>Comments</h3>
<% @tutorial.posts.each do |post| %>
	<p><%= post.content %></p>
  <p><%= link_to post.user.name, post.user %> on <%= post.created_at.strftime("%e %b %Y") %></p>
	<hr>
<% end %>	

<%= simple_form_for(Post.new) do |f| %>
  <div class="form-inputs">
    <%= f.input :content, :label => "Add your thoughts", :input_html => { :rows => 4 } %>
    <%= f.hidden_field 'postable_id', :value => @tutorial.id %>
    <%= f.hidden_field 'postable_type', :value => 'tutorial' %>
  </div>
    <%= f.button :submit, "Add your comment" %>
<% end %>
</div>

<div class="content_box">
<%= link_to "<i class='icon-arrow-left icon-small'></i> Back".html_safe, tutorials_path %>
</div>