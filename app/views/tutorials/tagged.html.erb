<h2>Tutorials</h2>

<%= form_tag tutorials_path, :method => :get, :class => 'form-search search-bar' do %>
    <div class="input-append">
        <%= text_field_tag :search, params[:search], :class => 'search-tag', :placeholder => 'Enter a tag' %>
        <%= button_tag :class => "btn btn-primary" do %>
            Search <i class="icon-search icon-white"></i>
        <% end %>
    </div>
<% end %>